gzip fs_linux:../binaries/oz_util_dismount.oz    dev_fd0.oz_dfs:/oz_util_dismount.oz.gz
gzip fs_linux:../binaries/oz_util_dump.oz        dev_fd0.oz_dfs:/oz_util_dump.oz.gz
